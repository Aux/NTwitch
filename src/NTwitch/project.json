{
    "version": "0.0.1-*",
    "description": "A .Net Core implementation of the https://twitch.tv/ version 3 api.",
    "authors": [ "Auxesis" ],

    "packOptions": {
        "tags": [ "twitch", "twitchtv" ],
        "licenseUrl": "http://opensource.org/licenses/MIT",
        "projectUrl": "https://github.com/Aux/NTwitch",
        "repository": {
            "type": "git",
            "url": "git://github.com/Aux/NTwitch"
        }
    },

	"dependencies": {
		"NETStandard.Library": "1.6.1",
		"NTwitch.Chat": "0.0.1-*",
		"NTwitch.Core": "0.0.1-*",
		"NTwitch.Rest": "0.0.1-*",
		"NTwitch.PubSub": "0.0.1-*"
	},

	"frameworks": {
		"netstandard1.6": {
		  "imports": "dnxcore50"
		}
	},
  
	"buildOptions": {
		"xmlDoc": false
	},

	"scripts": {
		"postcompile": [
			"dotnet pack --no-build --configuration %compile:Configuration%"
		]
	}
}

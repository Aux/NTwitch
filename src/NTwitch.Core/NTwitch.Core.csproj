<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <PropertyGroup>
    <VersionPrefix>0.0.3</VersionPrefix>
    <TargetFrameworks>netstandard1.6</TargetFrameworks>
    <AssemblyName>NTwitch.Core</AssemblyName>
    <Authors>Auxesis</Authors>
    <Description>A .Net Core implementation of the Twitch API.</Description>
    <PackageTags>twitch;twitch.net;ntwitch;api;library;dot;net;core</PackageTags>
    <PackageProjectUrl>https://github.com/Aux/NTwitch</PackageProjectUrl>
    <PackageLicenseUrl>http://opensource.org/licenses/MIT</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>git://github.com/Aux/NTwitch</RepositoryUrl>
    <RootNamespace>NTwitch</RootNamespace>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
  </PropertyGroup>
  
  <PropertyGroup Label="Configuration">
    <RootNamespace>NTwitch</RootNamespace>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Include="**\*.cs" />
    <EmbeddedResource Include="**\*.resx" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="NETStandard.Library" Version="1.6.1" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.2-beta2" />
    <PackageReference Include="System.Collections.Immutable" Version="1.3.1" />
  </ItemGroup>
</Project>